<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.UserMapper">

    <resultMap id="UserResultMap" type="org.example.pojo.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="nickname" column="nickname"/>
        <result property="email" column="email"/>
        <result property="userPic" column="user_pic"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="getUserByName" resultMap="UserResultMap">
        select id,
               username,
               password,
               nickname,
               email,
               user_pic,
               create_time,
               update_time
        from user
        where username = #{username}
    </select>

    <insert id="add">
        insert into user (username, password, nickname, email, user_pic, create_time, update_time)
        values (#{username}, #{md5String}, '', '', '', now(), now())
    </insert>

</mapper>
